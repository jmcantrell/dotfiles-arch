#!/usr/bin/env bash

# Install and configure command line tools.

set -e

sudo pacman -S --noconfirm --needed \
	bash bash-completion \
	zsh zsh-completions \
	openssh tmux ranger

sudo pacman -S --noconfirm --needed \
	atool bzip2 gzip zip unzip p7zip tar \
	cpio lha xz lzop unace unrar

sudo pacman -S --noconfirm --needed \
	vim words aspell-en

sudo pacman -S --noconfirm --needed \
	curl lynx wget whois newsboat

sudo pacman -S --noconfirm --needed \
	iptables ebtables openvpn

sudo pacman -S --noconfirm --needed \
	acpi lshw lsof socat \
	bridge-utils dnsmasq \
	inotify-tools glances ncdu

sudo pacman -S --noconfirm --needed \
	aria2 stow

aur-install direnv
