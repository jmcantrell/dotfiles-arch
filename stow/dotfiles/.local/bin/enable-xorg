#!/usr/bin/env bash

# Install and configure x server and tools.

set -e

sudo pacman -S --noconfirm --needed \
    xf86-video-intel mesa \
    xorg-server xorg-apps xorg-xinit \
    xsel xterm xdotool

# desktop tools
sudo pacman -S --noconfirm --needed \
    dex dmenu rofi sxhkd compton unclutter trash-cli \
    dunst libnotify notification-daemon \
    redshift python-xdg gparted gufw

# fonts
sudo pacman -S --noconfirm --needed \
    xorg-xlsfonts xorg-xfontsel \
    ttf-{dejavu,croscore,droid,roboto,liberation,ubuntu-font-family} \
    noto-fonts noto-fonts-{cjk,emoji}

# font display tweaks
sudo ln -sfv /etc/fonts/conf.avail/10-sub-pixel-rgb.conf /etc/fonts/conf.d
sudo ln -sfv /etc/fonts/conf.avail/11-lcdfilter-default.conf /etc/fonts/conf.d

# themes
sudo pacman -S --noconfirm --needed \
    arc-{gtk,icon}-theme \
    gnome-themes-standard gnome-icon-theme \
    gnome-icon-theme-{extras,symbolic}
