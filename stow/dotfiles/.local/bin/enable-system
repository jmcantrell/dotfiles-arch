#!/usr/bin/env sh

# Install and configure a basic arch linux system.

set -e

# 32-bit application support
enable-multilib

# pacman mirrorlist updates
enable-reflector

# time update service
sudo pacman -S --noconfirm --needed ntp
sudo systemctl --now enable ntpd.service

# package contents database
sudo pacman -S --noconfirm --needed pkgfile
sudo pkgfile -u
sudo systemctl enable pkgfile-update.timer

# file location database
sudo pacman -S --noconfirm --needed mlocate
sudo updatedb
