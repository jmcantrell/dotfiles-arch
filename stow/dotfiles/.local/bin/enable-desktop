#!/usr/bin/env bash

# Configure an arch linux desktop environment.

set -e

enable-system
enable-terminal
enable-dev
enable-xorg
enable-i3
enable-pulseaudio

[[ -n $MEDIA ]] && enable-media
[[ -n $STUDIO ]] && enable-studio
[[ -n $FIREWALL ]] && enable-ufw && sudo pacman -S --noconfirm --needed gufw
[[ -n $OFFICE ]] && enable-office && sudo pacman -S --noconfirm --needed system-config-printer

aur-install rectsel xzoom

aur-install clipmenu
systemctl --user --now enable clipmenud.service

enable-volumeicon
enable-cbatticon
enable-udiskie

sudo pacman -S --noconfirm --needed \
    firefox feh vlc mplayer gifsicle mupdf gparted
