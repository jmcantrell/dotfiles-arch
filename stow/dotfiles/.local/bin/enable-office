#!/usr/bin/env bash

# Install and configure tools for typesetting, scanning, and printing.

enable-cups
enable-sane

sudo pacman -S --noconfirm --needed \
	texlive-{bin,core,latexextra} \
	ghostscript pandoc words

has xinit || exit 0

sudo pacman -S --noconfirm --needed \
	libreoffice-fresh gnumeric \
	gummi gsfonts
