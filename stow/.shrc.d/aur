# Don't prompt for editing or viewing diffs for packages.
# WARNING: This is a security risk. PKGBUILDs should be inspected first.
alias pikaur='pikaur --noedit --nodiff'

# Search for packages.
alias aurs='pikaur --sync --search'

# Install packages.
alias auri='pikaur --sync'

# Show package information.
alias aursh='pikaur --sync --info'

# Upgrade installed packages.
alias aurup='pikaur --sync --refresh --sysupgrade'

# Remove unused packages.
aurx() {
    pacx
    local dir=${XDG_CACHE_HOME:-$HOME/.cache}/pikaur/pkg
    paccache -v --cachedir "$dir" --remove --keep 1
    paccache -v --cachedir "$dir" --remove --keep 0 --uninstalled
}

# vi:ft=sh
