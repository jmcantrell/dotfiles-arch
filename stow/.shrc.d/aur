# Don't prompt for editing or viewing diffs for packages.
# WARNING: This is a security risk. PKGBUILDs should be inspected first.
alias pikaur='pikaur --noedit --nodiff'

# Search for packages.
alias aurs='pikaur -Ss'

# Install packages.
alias auri='pikaur -S'

# Show package information.
alias aursh='pikaur -Si'

# Upgrade installed packages.
alias aurup='pikaur -Syu'

# Remove unused packages.
aurx() {
    pacx
    local pikaur_cache=${XDG_CACHE_HOME:-$HOME/.cache}/pikaur/pkg
    paccache -vrk1 -c "$pikaur_cache"
    paccache -vruk0 -c "$pikaur_cache"
}

# vi:ft=sh
