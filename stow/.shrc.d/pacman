alias pacman='pacman --color=auto'
alias pac='pacman'

# Search for packages.
alias pacs='pac -Ss'

# Install packages.
alias paci='sudo pac -Sy'

# Remove packages.
alias pacrm='sudo pac -Rs'

# Show package information.
alias pacsh='pac -Si'

# Upgrade installed packages.
alias pacup='sudo pac -Syu'

# Show unrequired packages.
alias paco='pac -Qdt'

# Show explicitly installed packages.
alias pacls='pac -Qqe' # just package names
alias pacll='pac -Qe'  # with versions

# Search installed packages.
alias pacq='pac -Qs'   # detailed list
alias pacqq='pac -Qqs' # just package names

# Show packages containing filename.
alias pacf='pkgfile -sir' # <pattern>

pacx() {
    local pacman_cache=/var/cache/pacman/pkg
    sudo paccache -vrk1 -c "$pacman_cache"
    sudo paccache -vruk0 -c "$pacman_cache"
}

# vi:ft=sh
