alias pacman='pacman --color=auto'

# Search for packages.
alias pacs='pacman -Ss'

# Install packages.
alias paci='sudo pacman -Sy'

# Remove packages.
alias pacrm='sudo pacman -Rs'

# Show package information.
alias pacsh='pacman -Si'

# Upgrade installed packages.
alias pacup='sudo pacman -Syu'

# Show unrequired packages.
alias paco='pacman -Qdt'

# Show explicitly installed packages.
alias pacls='pacman -Qqe' # just package names
alias pacll='pacman -Qe'  # with versions

# Search installed packages.
alias pacq='pacman -Qs'   # detailed list
alias pacqq='pacman -Qqs' # just package names

# Show packages containing filename.
alias pacf='pkgfile -sir' # <pattern>

pacx() {
    local pacman_cache=/var/cache/pacman/pkg
    sudo paccache -vrk1 -c "$pacman_cache"
    sudo paccache -vruk0 -c "$pacman_cache"
}

# vi:ft=sh
