#!/usr/bin/env bash

# Install and configure CUPS printing.

set -euo pipefail

sudo pacman -S --noconfirm --needed \
    cups \
    cups-pdf \
    gutenprint \
    foomatic-db \
    foomatic-db-engine \
    foomatic-db-gutenprint-ppds \
    foomatic-db-nonfree-ppds \
    foomatic-db-ppds \
    system-config-printer

sudo systemctl enable --now cups.socket
sudo gpasswd -a "$USER" lp
