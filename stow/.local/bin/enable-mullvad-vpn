#!/usr/bin/env bash

# Install and configure the Mullvad VPN app.

set -euo pipefail

gpg --recv-keys A26581F219C8314C
pikaur -Sy --noconfirm --needed mullvad-vpn-bin
sudo systemctl enable --now mullvad-daemon.service

mullvad account set "${MULLVAD_ACCOUNT:?MULLVAD_ACCOUNT not set}"
mullvad auto-connect set on
mullvad lan set allow
mullvad tunnel ipv6 set on
mullvad relay set tunnel-protocol wireguard
mullvad relay set location us nyc
