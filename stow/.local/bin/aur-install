#!/usr/bin/env bash

# Simple AUR package installer.
# Usage: aur-install NAME...

set -eu

temp_dir=$(mktemp -d -t "${0##*/}".XXXXXXXXXX)
trap 'rm -rf "$temp_dir"' INT TERM EXIT

url="https://aur.archlinux.org/cgit/aur.git/snapshot"

for name in "$@"; do
    package=$name.tar.gz

    curl --location --output "$temp_dir/$package" "$url/$package"
    tar --directory "$temp_dir" --extract --file "$temp_dir/$package"

    cd "$temp_dir/$name"

    makepkg --force --syncdeps --install --noconfirm
done
