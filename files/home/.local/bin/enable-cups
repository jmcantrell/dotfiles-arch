#!/usr/bin/env bash

# Install and configure CUPS printing.

set -eu

sudo pacman --sync --noconfirm --needed \
	cups \
	cups-pdf \
	gutenprint \
	foomatic-db \
	foomatic-db-{engine,ppds} \
	foomatic-db-{gutenprint,nonfree}-ppds \
	system-config-printer

sudo systemctl enable --now cups.socket
sudo gpasswd --add "$USER" lp
