#!/usr/bin/env bash

# Build a copy of archiso-releng.

set -euo pipefail

((EUID==0)) || exec sudo -- "$0" "$@"

output_dir=$PWD

build_dir=$(mktemp -d -t "${0##*/}.XXXXXXXXXX")
printf -v cleanup "rm -r %q" "$build_dir"
trap '$cleanup' EXIT

mkarchiso -v -w "$build_dir" -o "$output_dir" /usr/share/archiso/configs/releng
